<div class="card">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h2>{{image.title}}</h2>
    <button class="btn btn-danger" id="btn-delete" data-id="{{image.uniqueId}}">
      <i class="fa fa-times"></i> <span>Delete</span>
    </button>
  </div>
  <div class="card-body">
    <p>{{image.description}}</p>
    <div class="text-center">
      <img src="/public/upload/{{image.filename}}" class="img-fluid">
    </div>
  </div>
  <div class="card-footer d-flex justify-content-between align-items-center">
    <button class="btn btn-success" id="btn-like" data-id="{{image.filename}}">
      <i class="fa fa-thumbs-up"></i> Like
    </button>
    <p>
      <span class="likes-count">{{image.likes}}</span>
      <i class="fas fa-heart"></i>
    </p>
    <p>
      <i class="fas fa-eye"></i> {{image.views}}
    </p>
    <p>
      <i class="far fa-clock"></i>
      {{timeago image.timestamp}}
    </p>
  </div>
</div>

<div class="card mt-2">
  <div class="card-header d-flex justify-content-between align-items-center">
    <h3>Comments</h3>
    <button class="btn btn-info" id="btn-toggle-comment">
      <i class="fa fa-comment-o"></i> Post a Comment
    </button>
  </div>
  <div class="card-body">
    <blockquote id="post-comment">
      <form action="/images/{{image.uniqueId}}/comment" method="POST">
        <div class="input-group mt-2">
          <input type="text" class="form-control" name="name" placeholder="Name">
        </div>
        
        <div class="input-group mt-2">
          <input type="text" class="form-control" name="email" placeholder="Email">
        </div>
        
        <div class="input-group mt-2">
          <textarea name="comment" rows="2" class="form-control"></textarea>
        </div>
        
        <div class="input-group mt-2">
          <button class="btn btn-success" id="btn-comment">
            <i class="fa fa-comment"></i> Post
          </button>
        </div>
        
      </form>
    </blockquote>
    <ul class="list-group p-4">
      {{#each comments}}
        <li class="list-group-item p-3">
          <div class="row">
            <a href="#" class="col text-center">
              <img src="http://gravatar.com/avatar/{{gravatar}}?d=monsterid&s=45">
            </a>
            <blockquote class="col">
              <p class="lead">{{comment}}</p>
              <footer class="blockquote-footer">
                {{name}} - {{timeago timestamp}}
              </footer>
            </blockquote>
          </div>
        </li>
      {{/each}}
    </ul>
  </div>
</div>
